{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      ["feat", "fix", "docs", "style", "refactor", "test", "ci", "chore"]
    ],
    "scope-enum": [
      1,
      "always",
      ["commitlint", "package.json", "common", "config"]
    ]
  }
}
